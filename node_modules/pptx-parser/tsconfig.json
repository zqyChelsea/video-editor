{
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modiles"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es5",
    "module": "esnext",
    "allowJs": true,
    "jsx": "preserve",
    "strictNullChecks": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "utils/*": ["./src/utils/*"],
      "@/*": ["./src/*"]
    }
  },
  "types": [
    "@vf.js/gui",
    "@vf.js/vf"
  ],
  "compileOnSave": true,
  "awesomeTypescriptLoaderOptions": {
    "useCache": false
    /* ... */
  }
}