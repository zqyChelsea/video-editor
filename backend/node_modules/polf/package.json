{
  "name": "polf",
  "version": "0.0.3",
  "description": "Point on line functions.",
  "keywords": [
    "svg",
    "point",
    "vector"
  ],
  "main": "src/index.js",
  "browser": "src/index.js",
  "scripts": {
    "coveralls": "cat ./tests/coverage/lcov.info | coveralls",
    "build": "node_modules/.bin/webpack",
    "lint": "node_modules/.bin/eslint src tests webpack.config.js",
    "lintfix": "npm run lint -- --fix",
    "pre:publish": "node_modules/.bin/run-s lint build",
    "test": "jest"
  },
  "author": {
    "name": "Álvaro Mondéjar Rubio",
    "email": "mondejar1994@gmail.com"
  },
  "contributors": [],
  "license": "GPL-3.0",
  "devDependencies": {
    "coveralls": "^3.1.0",
    "eslint": "^7.0.0",
    "eslint-config-mourner": "^3.0.0",
    "jest": "26.0.1",
    "npm-run-all": "^4.1.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mondeja/polf.git"
  },
  "bugs": {
    "url": "https://github.com/mondeja/polf/issues",
    "email": "mondejar1994@gmail.com"
  },
  "files": "src",
  "engines": {
    "node": ">=6.17.1"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "extends": "mourner",
    "rules": {
      "linebreak-style": [
        2,
        "unix"
      ],
      "no-mixed-spaces-and-tabs": 2,
      "indent": [
        "error",
        2
      ],
      "curly": 2,
      "spaced-comment": 2
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/tests/coverage"
  }
}
